/// <reference path="../../includes.ts"/>
/// <reference path="designerGlobals.ts"/>
module Designer {

  export var _module = angular.module(Designer.pluginName, ["xeditable"]);

  var tab = undefined;

  _module.config(['$locationProvider', '$routeProvider', 'HawtioNavBuilderProvider', ($locationProvider, $routeProvider:ng.route.IRouteProvider, builder:HawtioMainNav.BuilderFactory) => {
    tab = builder.create()
      .id(Designer.pluginName)
      .title(() => "Policy")
      .href(() => "/policy")
      .build();
    builder.configureRouting($routeProvider, tab);
    $locationProvider.html5Mode(true);
    $routeProvider.
      when('/policy', {
        templateUrl: 'plugins/designer/html/organizations.html',
        controller: 'Designer.OrganizationsController'
      }).
      when('/policy/:organization', {
        templateUrl: 'plugins/designer/html/organization.html',
        controller: 'Designer.OrganizationController'
      }).
      when('/policy/:organization/:policygroup', {
        templateUrl: 'plugins/designer/html/policygroup.html',
        controller: 'Designer.PolicyGroupController'
      }).
      when('/policy/:organization/:policygroup/:policy', {
        templateUrl: 'plugins/designer/html/policy.html',
        controller: 'Designer.PolicyController'
      });

  }]);

  _module.run(function(editableOptions) {
      editableOptions.theme = 'bs3';
  });

  _module.run(['HawtioNav', (HawtioNav:HawtioMainNav.Registry) => {
    HawtioNav.add(tab);
    log.debug("loaded");
  }]);

  hawtioPluginLoader.addModule(Designer.pluginName);
}
