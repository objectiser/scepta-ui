/// <reference path="designerPlugin.ts"/>
module Designer {

  export var OrganizationController = _module.controller("Designer.OrganizationController", ['$scope', '$routeParams', '$http', ($scope, $routeParams, $http) => {
    $scope.organizationName = $routeParams.organization;

    $http.get('http://localhost:8080/policy-dev-server/'+$scope.organizationName).success(function(data) {
      $scope.organization = data;
    });

    $http.get('http://localhost:8080/policy-dev-server/'+$scope.organizationName+'/group').success(function(data) {
      $scope.policygroups = data;
    });

    $scope.updateOrganization = function() {

      var req = {
        method: 'POST',
        url: 'http://example.com',
        headers: {
          'Content-Type': undefined
        },
        data: { test: 'test' },
      }

      $http(req);
      //return $http.post('http://localhost:8080/policy-dev-server/'+$scope.organizationName, $scope.user);
    };
  }]);

}
